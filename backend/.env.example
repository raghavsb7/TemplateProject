# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/app_db

# Canvas OAuth Configuration
CANVAS_BASE_URL=https://canvas.instructure.com
CANVAS_CLIENT_ID=your_canvas_client_id
CANVAS_CLIENT_SECRET=your_canvas_client_secret

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Handshake OAuth Configuration
HANDSHAKE_CLIENT_ID=your_handshake_client_id
HANDSHAKE_CLIENT_SECRET=your_handshake_client_secret

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Background Sync (set to "true" to enable automatic syncing)
ENABLE_BACKGROUND_SYNC=false

